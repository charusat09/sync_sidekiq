<h1>Page#index</h1>
<p>Find me in app/views/page/index.html.erb</p>


<%=button_tag "Start Me",class:"btn",remote:true%>


<script type="text/javascript">
  $(function(){
    $(".btn").on("click",function(){
      $.ajax({
        url:"<%= counter_index_path %>",
        type:"POST"
      });
      myResponse();
    });
    myResponse = function(){
      $.ajax({
        url:"<%= counter_path(2)%>",
        type:"GET"
        })
        .done(function(data){
          $(".btn").html("<span>"+data+"</span>");
        });
    };
  });
</script>
